<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e4e1e1"
    tools:context="com.example.a.dazhuoye.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text"
            android:textSize="40px"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:background="#f4e4e4"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:orientation="horizontal">
        <Button android:layout_width="match_parent"
            android:layout_height="120px"
            android:textSize="45px"
            android:text="sin"
            android:id="@+id/sin"
            android:layout_weight="1">
        </Button>
        <Button
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:textSize="45px"
            android:text="cos"
            android:id="@+id/cos"
            android:layout_weight="1">
        </Button>
        <Button
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:textSize="45px"
            android:text="tan"
            android:id="@+id/tan"
            android:layout_weight="1">
        </Button>
        <Button
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:textSize="45px"
            android:text="del"
            android:id="@+id/del"
            android:layout_weight="1">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:orientation="horizontal">
        <Button android:layout_width="match_parent"
            android:layout_height="120px"
            android:textSize="45px"
            android:text="log"
            android:id="@+id/log"
            android:layout_weight="1">
        </Button>
        <Button
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:textSize="45px"
            android:text="ln"
            android:id="@+id/ln"
            android:layout_weight="1">
        </Button>
        <Button
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:textSize="45px"
            android:text="√"
            android:id="@+id/genhao"
            android:layout_weight="1">
        </Button>
        <Button android:layout_width="match_parent"
            android:layout_height="120px"
            android:textSize="45px"
            android:text="clean"
            android:id="@+id/clean"
            android:layout_weight="1">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:orientation="horizontal">
        <Button
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:textSize="45px"
            android:text="x²"
            android:id="@+id/x2"
            android:layout_weight="1">
        </Button>
        <Button
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:textSize="45px"
            android:text="x³"
            android:id="@+id/x3"
            android:layout_weight="1">
        </Button>
        <Button
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:textSize="45px"
            android:text="X!"
            android:id="@+id/jiec"
            android:layout_weight="1">
        </Button>
        <Button
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:textSize="45px"
            android:text="*"
            android:id="@+id/rid"
            android:layout_weight="1">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:orientation="horizontal">
        <Button
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:textSize="45px"
            android:id="@+id/n7"
            android:text="7"
            android:layout_weight="1">
        </Button>
        <Button
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:textSize="45px"
            android:id="@+id/n8"
            android:text="8"
            android:layout_weight="1">
        </Button>
        <Button
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:textSize="45px"
            android:id="@+id/n9"
            android:text="9"
            android:layout_weight="1">
        </Button>
        <Button
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:textSize="45px"
            android:id="@+id/div"
            android:text="/"
            android:layout_weight="1">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:orientation="horizontal">
        <Button
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:textSize="45px"

            android:id="@+id/n4"
            android:text="4"
            android:layout_weight="1">
        </Button>
        <Button android:layout_width="match_parent"
            android:layout_height="120px"
            android:textSize="45px"
            android:id="@+id/n5"
            android:text="5"
            android:layout_weight="1">
        </Button>
        <Button
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:textSize="45px"
            android:id="@+id/n6"
            android:text="6"
            android:layout_weight="1">
        </Button>
        <Button
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:textSize="45px"
            android:id="@+id/add"
            android:text="+"
            android:layout_weight="1">
        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:orientation="horizontal">
        <Button
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:textSize="45px"
            android:id="@+id/n1"
            android:text="1"
            android:layout_weight="1">
        </Button>
        <Button android:layout_width="match_parent"
            android:layout_height="120px"
            android:textSize="45px"
            android:id="@+id/n2"
            android:text="2"
            android:layout_weight="1">
        </Button>
        <Button
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:textSize="45px"
            android:id="@+id/n3"
            android:text="3"
            android:layout_weight="1">
        </Button>
        <Button
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:textSize="45px"
            android:id="@+id/cut"
            android:text="-"
            android:layout_weight="1">
        </Button>
    </LinearLayout>

    <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130px"
                android:orientation="horizontal">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="120px"
                    android:textSize="45px"
                    android:layout_weight="1"
                    android:id="@+id/n0"
                    android:text="0">
                </Button>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="120px"

                    android:layout_weight="1"
                    android:id="@+id/point"
                    android:textSize="60px"
                    android:text=".">
                </Button>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="120px"
                    android:textSize="45px"
                    android:id="@+id/result"
                    android:layout_weight="1"
                    android:text="=">
                </Button>
    </LinearLayout>
</LinearLayout>